<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title></title>
		<!--window.devicePixel-->
		<link rel="stylesheet" type="text/css" href="../stylesheets/public.css"/>
		<link rel="stylesheet" type="text/css" href="../stylesheets/login.css"/>
	</head>
	<body>
		<div id="box1">
			<div class="box1-con">
				<p><img src="../images/shopex.png"/></p>
				<div class="smallbox">
					<h1><img src="../images/ecshop-logo.png"/></h1>
					<div class="imp">
						<form action="#">
							<input type="text" id="username" placeholder="用户名"/>
							<input type="password" id="pwd" placeholder="密码"/>
							<span>
								<input type="text" id="code" placeholder="验证码"/>
								<span class="codeImg">
									
								</span>
							</span>
							<a href="#" class="btn" onclick="login()">登录</a>
							<p>
								<input type="checkbox" id="save"/>
								<span>保存登录信息</span>
								<a href="#">忘记密码？</a>
								<a href="#">去店铺首页&gt;&gt;</a>
							</p>
						</form>
					</div>
				</div>
			</div>
		</div>
	</body>
	<script src="../javascripts/jquery-1.9.1.js"></script>
	<script src="../javascripts/login.js"></script>
	<script src="../javascripts/jquery.cookie.js"></script>
	<script type="text/javascript">
		function login(){
			$.ajax({
				url:"/loginAction",
				type: "post",
				data:{
					username : $("#username").val(),
					pwd : $("#pwd").val()
				},
				success : function(res){
					if(res.code == 1){
						console.log(res.message);
						location.href ="home"
					}else{
						alert(res.message);
					}
				}
			})
		}
	</script>
</html>
